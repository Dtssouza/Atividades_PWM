}

/* Estilos para os links da lista */
li a {
    font-family: Arial, sans-serif; /* Fonte dos links */
    color: #0077cc; /* Cor dos links */
    text-decoration: none; /* Remover sublinhado dos links */
}

/* Estilos para os links quando o mouse passa por cima */
li a:hover {
    text-decoration: underline; /* Adicionar sublinhado ao passar o mouse */
}
